@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Quên Mật khẩu?";
}

<h1 class="text-primary">@ViewData["Title"]</h1>
<h2 class="mb-4">Nhập email của bạn.</h2>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post" class="shadow-lg p-4 rounded-3 bg-light">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <!-- Email Input with Icon -->
            <div class="input-group mb-3">
                <span class="input-group-text bg-white border-end-0">
                    <i class="bi bi-envelope-fill text-primary"></i>
                </span>
                <input asp-for="Input.Email" class="form-control border-start-0" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label visually-hidden"></label>
            </div>
            <span asp-validation-for="Input.Email" class="text-danger"></span>

            <!-- Submit Button -->
            <div class="d-grid">
                <button type="submit" class="btn btn-lg btn-primary">
                    <i class="bi bi-key-fill me-2"></i>Đặt lại mật khẩu
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
