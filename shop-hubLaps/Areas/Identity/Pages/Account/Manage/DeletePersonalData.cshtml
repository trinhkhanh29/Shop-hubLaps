@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Xóa Dữ Liệu Cá Nhân";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 class="text-start" style="font-family: Lexend;font-weight: 500;font-size: 30px;">@ViewData["Title"]</h3>
<hr />
<div class="alert alert-warning" role="alert">
    <p>
        <strong>Xóa dữ liệu này sẽ xóa vĩnh viễn tài khoản của bạn và không thể phục hồi lại.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Vui lòng nhập mật khẩu của bạn." />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="w-100 btn btn-lg btn-danger" type="submit">Xóa dữ liệu và đóng tài khoản của tôi</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
