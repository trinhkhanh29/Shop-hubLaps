@model shop_hubLaps.Models.ChuDe

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-sm container-fluid">
    <div class="p-5 bg-white">
        <h2>Xóa Chủ đề bài viết</h2>
        <p class="text-danger">Bạn có chắc chắn muốn xóa chủ đề này? Thao tác này không thể hoàn tác.</p>

        <div class="mb-4">
            <hr />
            <dl class="dl-horizontal">
                <dt>Tên chủ đề:</dt>
                <dd>@Model.tenchude</dd>

                <dt>Slug:</dt>
                <dd>@Model.slug</dd>

                @if (!string.IsNullOrEmpty(Model.hinh))
                {
                    <dt>Hình ảnh:</dt>
                    <dd>
                        <img src="@Url.Content("~/Content/images/" + Model.hinh)"
                             alt="@Model.tenchude"
                             style="width: 120px; height: 90px; object-fit: cover;" />
                    </dd>
                }
            </dl>
        </div>

        @using (Html.BeginForm("DeleteConfirmed", "ChuDe", new { id = Model.machude }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-actions">
                <button type="submit" class="btn btn-danger">Xóa bỏ</button>
                @Html.ActionLink("Quay lại", "Index", "ChuDe", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}