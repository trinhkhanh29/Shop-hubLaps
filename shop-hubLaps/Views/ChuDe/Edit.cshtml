@model shop_hubLaps.Models.ChuDe

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Sửa Chủ Đề";
}

<h1 class="text-start" style="font-family: Lexend; font-weight: 500; font-size: 30px;">@ViewData["Title"]</h1>

<div class="container mt-4">
    <div class="card shadow-sm">

        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="machude" />

                <div class="mb-3">
                    <label asp-for="tenchude" class="form-label">Tên Chủ Đề</label>
                    <input asp-for="tenchude" class="form-control" />
                    <span asp-validation-for="tenchude" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="slug" class="form-label">Slug</label>
                    <input asp-for="slug" class="form-control" />
                    <span asp-validation-for="slug" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Hình ảnh hiện tại</label>
                    @if (!string.IsNullOrEmpty(Model.hinh))
                    {
                        <div class="mb-3">
                            <img src="@Url.Content("~/Content/images/" + Model.hinh)"
                                 alt="@Model.tenchude"
                                 class="img-fluid rounded" style="max-width: 150px; object-fit: cover;" />
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Không có hình ảnh hiện tại</p>
                    }
                </div>

                <div class="mb-3">
                    <label asp-for="hinh" class="form-label">Thay đổi Hình ảnh</label>
                    <input type="file" name="newHinh" class="form-control" />
                    <span asp-validation-for="hinh" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Trở lại danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
