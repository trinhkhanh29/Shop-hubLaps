@model shop_hubLaps.Models.ChuDe

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit Chủ Đề";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="machude" />

                <div class="mb-3">
                    <label asp-for="tenchude" class="form-label">Tên Chủ Đề</label>
                    <input asp-for="tenchude" class="form-control" aria-describedby="tenchudeValidation" />
                    <span asp-validation-for="tenchude" class="text-danger" id="tenchudeValidation"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="slug" class="form-label">Slug</label>
                    <input asp-for="slug" class="form-control" aria-describedby="slugValidation" />
                    <span asp-validation-for="slug" class="text-danger" id="slugValidation"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Hình ảnh hiện tại</label>
                    @if (!string.IsNullOrEmpty(Model.hinh))
                    {
                        <div class="mb-3">
                            <img src="@Url.Content("~/Content/images/" + Model.hinh)"
                                 alt="@Model.tenchude"
                                 class="img-thumbnail"
                                 style="width: 120px; height: 90px; object-fit: cover;" />
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Không có hình ảnh hiện tại</p>
                    }
                </div>

                <div class="mb-3">
                    <label asp-for="hinh" class="form-label">Thay đổi Hình ảnh</label>
                    <input type="file" name="newHinh" class="form-control" aria-describedby="newHinhValidation" />
                    <span asp-validation-for="hinh" class="text-danger" id="newHinhValidation"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
