@model shop_hubLaps.Models.TinTuc
@{
    ViewData["Title"] = "Chi Tiết Bài Viết";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.tieude</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container py-5">
        <!-- Ảnh bài viết -->
        <div class="row">
            <div class="col-12 text-center mb-4">
                <img src="@Model.hinhnen" class="img-fluid rounded" alt="@Model.tieude">
            </div>
        </div>

        <!-- Tiêu đề bài viết -->
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="fw-bold">@Model.tieude</h1>
            </div>
        </div>

        <!-- Tên chủ đề -->
        <div class="row">
            <div class="col-12 text-center mb-3">
                <span class="badge bg-primary fs-5">@Model.ChuDe.tenchude</span>
            </div>
        </div>

        <!-- Ngày cập nhật -->
        <div class="row">
            <div class="col-12 text-center mb-4">
                <p class="text-muted">Ngày cập nhật: @Model.ngaycapnhat?.ToString("dd/MM/yyyy")</p>
            </div>
        </div>

        <!-- Nội dung bài viết -->
        <div class="row">
            <div class="col-12">
                <article class="p-3 border rounded bg-light">
                    @Html.Raw(Model.noidung)
                </article>
            </div>
        </div>

        <!-- Nút quay lại -->
        <div class="row mt-5">
            <div class="col-12 text-center">
                <a href="@Url.Action("Index", "Blog")" class="btn btn-secondary">Quay lại danh sách bài viết</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
