@model IEnumerable<shop_hubLaps.Models.TinTuc>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Danh sách Tin Tức";
}

<h1 class="text-start" style="font-family: Lexend; font-weight: 500; font-size: 30px;">@ViewData["Title"]</h1>
<a href="@Url.Action("Create", "TinTuc")" class="btn btn-primary mb-3">Tạo Tin Tức Mới</a>

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Tiêu Đề</th>
                        <th>Slug</th>
                        <th>Chủ Đề</th>
                        <th>Ngày Cập Nhật</th>
                        <th>Xuất Bản</th>
                        <th>Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center">Không có tin tức nào để hiển thị.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.matin</td>
                                <td>@item.tieude</td>
                                <td>@item.slug</td>
                                <td>@(item.ChuDe?.tenchude ?? "Chủ đề không tồn tại")</td>
                                <td>@item.ngaycapnhat?.ToString("dd/MM/yyyy")</td>
                                <td>@(item.xuatban == true ? "Có" : "Không")</td>
                                <td>
                                    <a href="@Url.Action("Edit", "TinTuc", new { id = item.matin })" class="btn btn-sm btn-warning">Sửa</a>
                                    <a href="@Url.Action("Delete", "TinTuc", new { id = item.matin })" class="btn btn-sm btn-danger">Xóa</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
