@model shop_hubLaps.Models.Laptop

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Xóa Laptop";
}

<h1 class="text-center mb-4" style="font-family: Lexend; font-weight: 500; font-size: 30px;">@ViewData["Title"]</h1>

<div class="card shadow-sm mx-auto" style="max-width: 800px;">
    <div class="card-header bg-danger text-white text-center">
        <h4 class="mb-0">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            Xác nhận xóa
        </h4>
    </div>
    <div class="card-body">
        <p class="text-center text-danger fw-bold">Bạn có chắc chắn muốn xóa laptop này không?</p>

        <!-- Chi tiết Laptop -->
        <div class="d-flex flex-wrap align-items-center justify-content-center">
            <div class="text-center me-3">
                <img src="@(!string.IsNullOrEmpty(Model.hinh) ? Model.hinh : Url.Content("~/img/no-image.png"))"
                     alt="Hình Laptop"
                     class="img-thumbnail mb-3"
                     style="max-height: 200px;" />
            </div>
            <div>
                <h4 class="text-dark">@Model.tenlaptop</h4>
                <ul class="list-unstyled mb-0">
                    <li><strong>Giá bán:</strong> @String.Format("{0:C}", Model.giaban)</li>
                    <li><strong>Mô tả:</strong> @Model.mota</li>
                    <li><strong>CPU:</strong> @Model.cpu</li>
                    <li><strong>GPU:</strong> @Model.gpu</li>
                    <li><strong>RAM:</strong> @Model.ram</li>
                    <li><strong>Số lượng tồn:</strong> @(Model.soluongton.HasValue ? Model.soluongton.Value.ToString() : "Không có")</li>
                    <li><strong>Pin:</strong> @Model.pin</li>
                    <li><strong>Status:</strong> @(Model.trangthai == true ? "Còn hàng" : "Hết hàng")</li>
                </ul>
            </div>
        </div>
    </div>

