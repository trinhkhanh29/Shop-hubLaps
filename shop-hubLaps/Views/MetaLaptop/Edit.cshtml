@model shop_hubLaps.Models.MetaLaptop
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Sửa Meta Laptop";
}


<h1>Edit Meta Laptop</h1>

<form method="post">
    <div class="form-group">
        <label for="keymeta">Key Meta</label>
        <input type="text" class="form-control" id="keymeta" name="keymeta" value="@Model.keymeta" required />
    </div>

    <div class="form-group">
        <label for="valuemeta">Value Meta</label>
        <input type="text" class="form-control" id="valuemeta" name="valuemeta" value="@Model.valuemeta" required />
    </div>

    <div class="form-group">
        <label for="LaptopId">Laptop</label>
        <select class="form-control" id="LaptopId" name="LaptopId">
            <option value="">-- Select Laptop --</option>
            @foreach (var laptop in ViewData["LaptopId"] as SelectList)
            {
@*                 <option value="@laptop.Value" @(laptop.Value == Model.LaptopId.ToString() ? "selected" : "")>@laptop.Text</option>
 *@            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
