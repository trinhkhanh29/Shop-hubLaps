@model shop_hubLaps.Models.MetaLaptop
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Chỉnh sửa Meta Laptop";
}

<div class="container mt-4">
    <h1 class="text-start">Chỉnh sửa Meta Laptop</h1>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="mameta" />

        <div class="form-group">
            <label for="keymeta">Key Meta</label>
            <input type="text" class="form-control" id="keymeta" name="keymeta" value="@Model?.keymeta" required />
        </div>

        <div class="form-group">
            <label for="valuemeta">Value Meta</label>
            <input type="text" class="form-control" id="valuemeta" name="valuemeta" value="@Model?.valuemeta" required />
        </div>

        <div class="form-group">
            <label for="malaptop">Laptop</label>
            <select asp-for="malaptop" class="form-control" required>
                <option value="">Chọn Laptop...</option>
                @if (ViewData["LaptopList"] != null)
                {
                    var laptopList = ViewData["LaptopList"] as SelectList;
                    if (laptopList != null)
                    {
                        foreach (var laptop in laptopList.Items)
                        {
                            var laptopItem = (shop_hubLaps.Models.Laptop)laptop;
                            <option value="@laptopItem.malaptop" selected="@(laptopItem.malaptop == Model?.malaptop ? "selected" : "")">
                                @laptopItem.tenlaptop
                            </option>
                        }
                    }
                }
            </select>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Cập nhật</button>
        <a href="@Url.Action("Index", "MetaLaptop")" class="btn btn-secondary mt-3">Quay lại</a>
    </form>
</div>
