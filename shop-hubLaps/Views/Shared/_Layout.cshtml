    <style>
        html, body {
            height: 100%;
            font-family: 'Lexend', sans-serif; /* Ensure Lexend is the default font */
        }

        .footer {
            position: relative;
            min-height: 100px; /* Set minimum height for the footer */
            margin-top: auto; /* This pushes the footer to the bottom */
        }
        #myBtn {
            display: none;
            position: fixed;
            bottom: 20px;
            right: 10px;
            z-index: 99;
            border: none;
            outline: none;
            background-color: red;
            border: 4px solid #ccc;
            color: red;
            cursor: pointer;
            border-radius: 30px;
            opacity: 0.7;
            width: 60px;
        }

            #myBtn:hover {
                background-color: #f1f1f1;
            }

        .neonText {
            color: #fff;
            text-shadow: 0 0 7px #fff, 0 0 10px #fff, 0 0 21px #fff, 0 0 42px #0fa, 0 0 82px #0fa, 0 0 92px #0fa, 0 0 102px #0fa, 0 0 151px #0fa;
        }

        .neonBack {
            border-radius: 25px;
            color: #fff;
            box-shadow: 0 0 2px #fff, 0 0 10px #fff, 0 0 20px #0ba9ca, 0 0 30px #0ba9ca, 0 0 40px #0ba9ca, 0 0 50px #0ba9ca;
            -webkit-animation: blink 0.7s infinite alternate;
            animation: blink 0.7s infinite alternate;
        }

        .formDiv {
            padding: 20px;
            border-radius: 25px;
            box-shadow: 0 0 2px #fff, 0 0 10px #fff, 0 0 20px #04f19a, 0 0 30px #04f19a, 0 0 40px #04f19a, 0 0 50px #04f19a;
            -webkit-animation: blink 0.7s infinite alternate;
            animation: blink 0.7s infinite alternate;
        }

        .formDiv-orange {
            padding: 20px;
            border-radius: 25px;
            box-shadow: 0 0 2px #fff, 0 0 10px #fff, 0 0 20px orange, 0 0 30px orange, 0 0 40px orange, 0 0 50px orange;
            -webkit-animation: blink 0.7s infinite alternate;
            animation: blink 0.7s infinite alternate;
        }

        .formDiv-green {
            padding: 20px;
            border-radius: 25px;
            box-shadow: 0 0 2px #fff, 0 0 10px #fff, 0 0 20px green, 0 0 30px green, 0 0 40px green, 0 0 50px green;
            -webkit-animation: blink 0.7s infinite alternate;
            animation: blink 0.7s infinite alternate;
        }

        .formDiv-blue {
            padding: 20px;
            border-radius: 25px;
            box-shadow: 0 0 2px #fff, 0 0 10px #fff, 0 0 20px blue, 0 0 30px blue, 0 0 40px blue, 0 0 50px blue;
            -webkit-animation: blink 0.7s infinite alternate;
            animation: blink 0.7s infinite alternate;
        }

        .formDiv-red {
            padding: 20px;
            border-radius: 25px;
            box-shadow: 0 0 2px #fff, 0 0 10px #fff, 0 0 20px red, 0 0 30px red, 0 0 40px red, 0 0 50px red;
            -webkit-animation: blink 0.7s infinite alternate;
            animation: blink 0.7s infinite alternate;
        }

        .laptopzoom {
            transition: transform .2s;
        }

            .laptopzoom:hover {
                transform: scale(1.2);
                z-index: 100;
            }


        .header__search {
            /* margin-top: 8px; */
            flex: 1;
            height: 40px;
            border-radius: 2px;
            background-color: var(--white-color);
            display: flex;
            align-items: center;
        }

        .header__search-input-wrap {
            height: 100%;
            flex: 1;
            position: relative;
            z-index: 2;
        }

        /* Search history */
        .header__search-history {
            position: absolute;
            top: calc(100% + 4px);
            left: 0;
            width: calc(100% - 16px);
            background-color: var(--white-color);
            border-radius: 3px;
            box-shadow: 0 1px 3px #666;
            display: none;
            overflow: hidden;
            z-index: 1;
        }

        .header__search-history-heading {
            margin: 6px 12px;
            font-size: 1.4rem;
            color: #999;
            font-weight: 400;
        }

        .header__search-history-list {
            padding-left: 0;
            list-style: none;
            margin-bottom: 6px 0 0;
        }

        .header__search-history-item {
            height: 38px;
            padding: 0 12px;
        }

            .header__search-history-item:last-child {
                border-bottom-left-radius: 3px;
                border-bottom-right-radius: 3px;
            }

            .header__search-history-item:hover {
                background-color: #fafafa;
            }

            .header__search-history-item a {
                text-decoration: none;
                font-size: 1.4rem;
                color: var(--text-color);
                line-height: 38px;
                display: block;
            }

        .sticky-sidebar {
        }

            .sticky-sidebar.active {
                display: block;
            }

            .sticky-sidebar div {
                position: fixed;
                top: 195px;
                width: 89px;
                z-index: 999;
            }

        .banner {
            margin-top: 300px;
        }

        /*Căn chỉnh sidebar banner*/
        @@media screen and (max-width: 2000px) {
            .sticky-sidebar .banner-left {
                left: calc(((100vw - 1200px)/2) - 80px);
            }
        }

        @@media screen and (max-width: 2000px) {
            .sticky-sidebar .banner-right {
                right: calc(((100vw - 1200px)/2) - 90px);
            }
        }

        @@media screen and (max-width: 2200px) {
            .sticky-sidebar .banner {
                right: calc(((100vw - 1200px)/2) - 200px);
            }
        }

        @@media screen and (max-width: 1200px) {
            .sticky-sidebar div {
                width: 69px;
            }
        }

        .modal-backdrop {
            opacity: 0.3 !important;
        }
    </style>
</head>
